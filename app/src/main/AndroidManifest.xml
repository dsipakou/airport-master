<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="by.airport.airport_main"
    android:versionCode="2"
    android:versionName="1.0.1">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="by.airport.airport_main.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="locked">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="by.airport.airport_main.ArrivalActivity"
            android:screenOrientation="locked">
        </activity>
        <activity
            android:name="by.airport.airport_main.DepartureActivity"
            android:screenOrientation="locked">
        </activity>
        <activity
            android:name="by.airport.airport_main.AirportPreferenceActivity"
            android:label="@string/settings_preferences"
            android:screenOrientation="locked">
        </activity>
    </application>

</manifest>
