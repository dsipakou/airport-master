<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_background"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/company"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:textAlignment="center"
                android:textColor="@color/main_background"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/company_img"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp" />

            <TextView
                android:id="@+id/registration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/company"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:text="@string/registration_label"
                android:textColor="@color/main_background"
                android:textSize="25sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/gate_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/registration"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:text="@string/gate_label"
                android:textColor="@color/main_background"
                android:textSize="25sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gate_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                android:background="@drawable/back"
                android:paddingEnd="20sp"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:paddingStart="20sp"
                android:textAlignment="center"
                android:textSize="30sp"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/left_time_panel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/status"
                android:layout_weight="1"
                android:padding="20sp">

                <TextView
                    android:id="@+id/scheduled_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/scheduled_label"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/scheduled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/scheduled_title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10sp"
                    android:textColor="@color/main_background"
                    android:textStyle="bold"
                    android:textSize="30sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/left_time_panel"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:padding="20sp">

                <TextView
                    android:id="@+id/actual_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/estimated_label"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/actual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/actual_title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10sp"
                    android:textColor="@color/main_background"
                    android:textStyle="bold"
                    android:textSize="30sp" />
            </RelativeLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>